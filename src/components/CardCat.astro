---
import { Image } from "astro:assets";
const { cat } = Astro.props;

if (!cat) {
	return;
}
---

<article
	class="odd:rotate-1 even:-rotate-1 hover:rotate-0 transition hover:scale-105 duration-500 bg-white"
	data-cat={JSON.stringify(cat.data)}
>
	<a href={`/cats/${cat.id}`} class="h-full flex flex-col" data-translate={`/cats/${cat.id}`}>
		<Image
			src={cat.data.image}
			alt={cat.data.name}
			class:list={"w-full aspect-[6/4] object-cover rounded-t-2xl"}
			transition:name={`cat-image-${cat.id}`}
		/>

		<div class="px-4 pt-8 flex flex-col grow border-x-2 border-b-2 border-gray-100 rounded-b-2xl overflow-hidden">
			<h2 class="h5 tracking-wide" transition:name={`cat-title-${cat.id}`} data-translate={cat.data.name}>{cat.data.name}</h2>
			<p class="mt-2 mb-8 prose" transition:name={`cat-description-${cat.id}`} data-translate={cat.data.description}>{cat.data.description}</p>
			<span
				class="px-4 py-2 -mx-4 text-white text-2xl font-bold bg-gradient-to-r from-pink-100 via-pink-200 to-pink-300"
			 data-translate="CONOCEME">
				Con√≥ceme
			</span>
		</div>
	</a>
</article>
