---
import { getCollection } from "astro:content";
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Heading from "~/components/Heading.astro";
import CardBlogPost from "~/components/CardBlogPost.astro";
const posts = await getCollection("blog");
---

<Layout>
	<Section>
		<Container>
			<Heading>
				<h1 slot="heading-title" class="h2 text-4xl font-bold bg-gradient-to-r from-pink-200 via-pink-400 to-fuchsia-600 bg-clip-text text-transparent">Blog</h1>
				<p slot="heading-content" data-translate="blog">
					Welcome to our blog! Here you will find the latest news and updates from our pet shelter. We are
					passionate about helping pets find loving forever homes, and we are excited to share our stories
					with you. Thank you for supporting our shelter!
				</p>
			</Heading>

			<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-16 xl:gap-24">
				{posts.map((post) => <CardBlogPost post={post} />)}
			</div>
		</Container>
	</Section>
</Layout>
